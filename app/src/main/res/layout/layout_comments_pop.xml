<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/LinearniZaKomentare"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/buttonborder"
        android:orientation="vertical">

        <TextView
            android:id="@+id/ImeKomentatora"
            android:layout_width="176dp"
            android:layout_height="53dp"
            android:text="Ime Komentatora" />

        <RatingBar
            android:id="@+id/OcenaKomentatora"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/KomentarKomentatora"
            android:layout_marginStart="1dp"
            android:layout_marginLeft="1dp"
            android:layout_marginBottom="31dp"
            android:layout_toEndOf="@+id/ImeKomentatora"
            android:layout_toRightOf="@+id/ImeKomentatora"
            android:isIndicator="true"
            android:numStars="5"
            android:rating="0"
            android:stepSize="1"
            android:text="OcenaKomentatora" />

        <TextView
            android:id="@+id/KomentarKomentatora"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/ImeKomentatora"
            android:layout_marginTop="10dp"
            android:text="Tekst Komentara" />

    </RelativeLayout>

</RelativeLayout>